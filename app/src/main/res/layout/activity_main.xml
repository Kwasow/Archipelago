<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- The main content view -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:menu="@menu/menu_home"
                app:title="@string/home"/>

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:id="@+id/homeScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:paddingTop="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSummary"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardGoals"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardStocks"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTips"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="0dp"
                    app:cardCornerRadius="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

            </LinearLayout>

        </ScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Opacity layer to do stuff -->
    <View
        android:id="@+id/opacity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/black"/>

    <!-- Floating action button stuff -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/actionButtonTransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/primary_light"
        android:src="@drawable/ic_transaction"
        android:contentDescription="@string/description_add_transaction"
        android:onClick="addTransaction"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@id/actionButtonSource"
        app:layout_constraintStart_toStartOf="@id/actionButton"
        app:layout_constraintEnd_toEndOf="@id/actionButton"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/fabCardTransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toStartOf="@id/actionButtonTransaction"
        app:layout_constraintTop_toTopOf="@id/actionButtonTransaction"
        app:layout_constraintBottom_toBottomOf="@id/actionButtonTransaction">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_transaction"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="4dp" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/actionButtonSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/primary_light"
        android:src="@drawable/ic_source_add"
        android:contentDescription="@string/description_add_source"
        android:onClick="addSource"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@id/actionButton"
        app:layout_constraintStart_toStartOf="@id/actionButton"
        app:layout_constraintEnd_toEndOf="@id/actionButton"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/fabCardSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toStartOf="@id/actionButtonSource"
        app:layout_constraintTop_toTopOf="@id/actionButtonSource"
        app:layout_constraintBottom_toBottomOf="@id/actionButtonSource">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_source"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="4dp" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/actionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        android:onClick="fabClick"
        android:contentDescription="@string/description_add_savings_source_fab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>