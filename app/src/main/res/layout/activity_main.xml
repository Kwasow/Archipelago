<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.MainActivity">

    <com.github.kwasow.archipelago.views.StoppableScrollView
        android:id="@+id/homeScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:stickyHeader="@id/titleLayout"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            android:paddingBottom="10dp">

            <View
                android:id="@+id/placeholder"
                android:layout_width="match_parent"
                android:layout_height="160dp"/>

            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dashboardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="@string/dashboard"
                    android:textSize="32sp"
                    android:textStyle="bold"/>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="4dp"
                    android:background="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSummary"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardGoals"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardStocks"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTips"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="0dp"
                    app:cardCornerRadius="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </com.github.kwasow.archipelago.views.StoppableScrollView>

    <LinearLayout
        android:id="@+id/opacityLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:orientation="horizontal"
        android:background="@color/black"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/actionButtonStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/primary_light"
        android:src="@drawable/ic_graph"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@id/actionButtonInvestment"
        app:layout_constraintStart_toStartOf="@id/actionButton"
        app:layout_constraintEnd_toEndOf="@id/actionButton"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/fabCardStocks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toStartOf="@id/actionButtonStock"
        app:layout_constraintTop_toTopOf="@id/actionButtonStock"
        app:layout_constraintBottom_toBottomOf="@id/actionButtonStock">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stocks"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="4dp" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/actionButtonInvestment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/primary_light"
        android:src="@drawable/ic_percent"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@id/actionButtonSavings"
        app:layout_constraintStart_toStartOf="@id/actionButton"
        app:layout_constraintEnd_toEndOf="@id/actionButton"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/fabCardInvestment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toStartOf="@id/actionButtonInvestment"
        app:layout_constraintTop_toTopOf="@id/actionButtonInvestment"
        app:layout_constraintBottom_toBottomOf="@id/actionButtonInvestment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/investment"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="4dp" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/actionButtonSavings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/primary_light"
        android:src="@drawable/ic_credit_card"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@id/actionButtonCash"
        app:layout_constraintStart_toStartOf="@id/actionButton"
        app:layout_constraintEnd_toEndOf="@id/actionButton"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/fabCardSavings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toStartOf="@id/actionButtonSavings"
        app:layout_constraintTop_toTopOf="@id/actionButtonSavings"
        app:layout_constraintBottom_toBottomOf="@id/actionButtonSavings">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/savings_account"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="4dp" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/actionButtonCash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/primary_light"
        android:src="@drawable/ic_dollar"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@id/actionButton"
        app:layout_constraintStart_toStartOf="@id/actionButton"
        app:layout_constraintEnd_toEndOf="@id/actionButton"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/fabCardCash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toStartOf="@id/actionButtonCash"
        app:layout_constraintTop_toTopOf="@id/actionButtonCash"
        app:layout_constraintBottom_toBottomOf="@id/actionButtonCash">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cash"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="4dp" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/actionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        android:onClick="fabClick"
        android:contentDescription="@string/description_add_balance_fab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>